<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mimi's Recipes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f6f9;
        }

        .navbar {
            background-color: #2c3e50;
            padding: 15px 0;
        }

        .container-main {
            background-color: lightblue;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 30px;
        }
    </style>
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Mimi's Recipes</a>
            <button class="navbar-toggler" type="button">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/search">Search Recipes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/saved">Saved Recipes</a>
                    </li>
                    <% if (userId) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/"><%= userId %></a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

  <div class="container container-main">
    <div class="row">
      <div class="col-md-6">
        <img src="<%= recipe.image %>" class="rounded mb-4" />
      </div>
      <div class="col-md-6">
        <h1 class="mb-4">
          <%= recipe.title %>
        </h1>

        <div class="card mb-4">
          <div class="card-header">Nutritional Information</div>
          <div class="card-body">
            <div class="row">
              <div class="col-6">
                <strong>Calories:</strong>
                <%= nutrition.calories %>
              </div>
              <div class="col-6">
                <strong>Protein:</strong>
                <%= nutrition.protein %>
              </div>
              <div class="col-6">
                <strong>Carbs:</strong>
                <%= nutrition.carbs %>
              </div>
              <div class="col-6">
                <strong>Fat:</strong>
                <%= nutrition.fat %>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

    <div class="row mt-4">
      <div class="col-md-6">
        <h3>Ingredients</h3>
        <ul class="list-group">
          <% recipe.extendedIngredients.forEach(ingredient=> { %>
            <li class="list-group-item">
              <%= ingredient.original %>
            </li>
            <% }); %>
        </ul>
      </div>
      <div class="col-md-6">
        <h3>Instructions</h3>
        <ol class="list-group list-group-numbered">
          <% recipe.analyzedInstructions[0]?.steps.forEach(step=> { %>
            <li class="list-group-item">
              <%= step.step %>
            </li>
            <% }); %>
        </ol>
      </div>
    </div>
  </div>
</body>

</html>