<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mimi's Recipes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f6f9;
        }

        .navbar {
            background-color: #2c3e50;
            padding: 15px 0;
        }

        .container-main {
            background-color: lightblue;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 30px;
        }
    </style>
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Mimi's Recipes</a>
            <button class="navbar-toggler" type="button">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/search">Search Recipes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/saved">Saved Recipes</a>
                    </li>
                    <% if (userId) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/"><%= userId %></a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <h1 class="text-center mb-4">My Saved Recipes</h1>

        <% if (savedRecipes.length > 0) { %>
            <div class="row">
                <% savedRecipes.forEach(recipe => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="<%= recipe.recipe_image %>" class="card-img-top"/>
                            <div class="card-body">
                                <h5 class="card-title"><%= recipe.recipe_title %></h5>
                                <div class="d-flex justify-content-between">
                                    <a href="/recipe/<%= recipe.recipe_id %>" class="btn btn-primary btn-sm">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div>
                <p>No saved recipes yet. Start searching and save your favorite recipes!</p>
            </div>
        <% } %>
    </div>
</body>

</html>